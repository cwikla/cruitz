@import "pyr/pyr";
@import "pyr_local";
@import "base";
@import "md";

.trans-15 {
  background-color: rgba($primary_color, 0.10);
}

.navbar-nav#sign-in-menu {
  padding-right: 1rem;
}


.boardroom {
  background: url(<%= asset_path 'images/boardroom.jpg' %>) no-repeat center center;
  b-background: url(<%= asset_path 'images/business-chairs-company-7070.jpg' %>) no-repeat center center;
  background-color: $primary_color;
}

.part {
  margin-bottom: 2rem;
}

.getter {
  margin-top: 2rem;
  margin-left: 5rem;
  margin-right: 5rem;

  color: $primary_color;

  h3 {
    color: $primary_color;
  }

  ol {
    padding: 1rem;
    margin-left: 1rem;
    margin-right: 1rem;

    li {
      list-style-type: circle;
      font-size: 1.25rem;
      line-height: 1.75rem;
    }

  }
}

.recruiters {
  background: url(<%= asset_path 'images/people.webp' %>) no-repeat center center;
  background-color: $primary_color;
}

.carousel {
  padding-top: 3rem;
  padding-bottom: 3rem;
  padding-left: 5rem;
  padding-right: 5rem;

  .carousel-caption {
    color: $primary_color;
  }

  .carousel-indicators  {
    bottom: 0;
    & li {
      width: 1rem;
      height: 1rem;

      background-color: $primary_color;
      &.active {
        background-color: $secondary_color;
      }
    }
  }

  .carousel-control-prev-icon {
    background-image: none;
    content: "\25AE";  /* this is your text. You can also use UTF-8 character codes as I do here */
    font-family: FontAwesome;
    left:-5px;
    position:absolute;
    top:0;
  }
  .carousel-control-next-icon {
    background-image: none;
    content: "\25AE";  /* this is your text. You can also use UTF-8 character codes as I do here */
    font-family: FontAwesome;
    left:-5px;
    position:absolute;
    top:0;
  }
}

.carousel-item {
  .blurb {
  }
  .major {
    font-size: 2rem;
    line-height: 2.25rem;
    color: $primary_color;
    padding-bottom: 2rem;
    padding-left: 1rem;
  }

  .minor {
    font-size: 1.25rem;
    color: $primary_color;
  }


  img {
    width: auto;
    max-height: 25rem;
    height: 25rem;
    object-fit: contain;
  }
}

.checks {
  margin-top: 3rem;
  margin-bottom: 3rem;
  margin-right: 1rem;
  margin-left: 1rem;

  justify-content: space-around;

  & > div {
    margin-left: 1rem;
    margin-right: 1rem;

    border: 2px solid $primary_color;
    border-radius: 10px;
    padding: 1.5rem;
    max-width: 25rem;
  }

  h3 {
    margin-left: auto;
    margin-right: auto;
    color: $primary_color;
  }

  .icon {
    padding-bottom: 1rem;
  }
  i {
    color: $primary_color;
    font-size: 2rem;
  }

}

.one-job {
  img {
    width: 35rem;
    height: auto;
    object-fit: contain;
  }
}

.hello-job {
  background: url(<%= asset_path 'images/hello-job.jpg' %>) no-repeat center center;
  background-color: $primary_color;
}

.jumbotron {
  height: 25rem;
  border-radius: 0;

  margin: 0;

  .btn-primary {
    margin-top: 1.5rem;
    font-size: 1.5rem;
  }
}

.body-content {
  font-weight: 300;
}

.home-container {
}

.home-section {

  & > div {
    padding: 4rem;
  }

  .left {
    padding-left: 8rem;
  }

  .right {
    padding-right: 8rem;
  }

  height: 30rem;
  border-bottom: 1px $border_color solid;
}

footer {
  &.footer {
    a {
      color: white !important;
      &:hover {
        color: white !important;
      }
    }

    border-top: 1px solid $primary_color;
    margin: 0;
    font-size: 0.75rem;

    .links {
      margin-top: 1rem;
      & > div {
        & > div {
          margin-left: 5rem;
          width: 20rem;
        }
      }
      font-size: 0.85rem;
      padding-left: 5rem;
      padding-right: 5rem;
    }

    .copyright {
      margin-top: 2rem;
    }
  }
}
