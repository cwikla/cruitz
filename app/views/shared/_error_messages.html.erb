
<% if obj.errors.any? %>
  <div>
    <% obj.errors.messages.each do |msg| %>
      <% msg %><br/>
    <% end %>
  </div>
  <div class="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(obj.errors.count, "error") %>.
    </div>
    <ul>
    <% obj.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
