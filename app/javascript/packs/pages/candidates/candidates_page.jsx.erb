const ACCEPTED_STATE = 100;
const REJECTED_STATE = -100;

const ID_TO_STATE = {
  0: "New",
  100 : "Accepted",
  "-100" : "Passed",
  200 : "Vetting",
  300 : "On Site",
  400 : "Background Checks",
  1000 : "Hired!",
  "-666" : "SPAM",
  "-1000" : "Recalled",
  "-5000" : "Cancelled",
};

function stateString(sid) {
  if (sid in ID_TO_STATE) {
    return ID_TO_STATE[sid];
  }

  return "Unknown";
}

