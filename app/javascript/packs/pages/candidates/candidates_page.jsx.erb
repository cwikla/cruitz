class ShowSheet extends Sheet.Show {
  constructor(props) {
    super(props);
    this.state = {
      job: null,
      showMessages: true
    };

    this.onAccept = this.accept.bind(this);
    this.onReject = this.reject.bind(this);
  }

  stateUpdate(state) {
    let candidate = this.props.selected;

    let url = Pyr.URL(CANDIDATES_URL).push(candidate.id);
    candidate = Object.assign({}, candidate, { state });

    Pyr.getJSON({
      url: url,
      context: this,
      type: Pyr.Method.PUT,
      data: { candidate : { state } },
      //contentType:"application/json; charset=utf-8",

    }).done((data, textStatus, jaXHR) => {
      this.setCandidate(data.candidate);

    }).fail((jaXHR, textStatus, errorThrown) => {
      Pyr.ajaxError(jaXHR, textStatus, errorThrown);

    });
  }

  accept(f, e) {
    //console.log("F");
    //console.log(f);
    //console.log("E");
    //console.log(e);
    this.stateUpdate(ACCEPTED_STATE);
  }

  reject(e) {
    this.stateUpdate(REJECTED_STATE);
  }

  setCandidate(candidate) {
    console.log(candidate);
    this.props.onAddItem(candidate);
    this.props.onSelect(candidate);
  }

  setJob(job) {
    this.setState({
      job
    });
  }

  getJob(jobId) {
    let url = Pyr.URL(JOBS_URL).push(jobId);

    this.setState({
      job: null
    });

    Pyr.getJSON({
      url: url,
      context: this,

    }).done((data, textStatus, jaXHR) => {
      this.setJob(data.job);

    }).fail((jaXHR, textStatus, errorThrown) => {
      Pyr.ajaxError(jaXHR, textStatus, errorThrown);

    });
  }

  componentDidUpdate(prevProps, prevUpdate) {
    let pid = prevProps.jobId;
    let cid = this.props.jobId;

    if (pid != cid) {
      this.getJob(cid);
    }
  }

  componentWillMount() {
    console.log("WILL MOUNT");
    console.log(this.props);
    this.getJob(this.props.jobId);
  }

  key(item) {
    return CandidatesPage.key(item);
  }

  renderHeader(candidate) {
    console.log("RENDER HEADER");
    console.log(candidate);
    let clazzes = ClassNames("actions flx-row p-1 flx-start").push("state").push(stateString(candidate.state));
    return (
      <div className={clazzes}>
        <UserScore className="flx-align-content-start">88</UserScore>:{candidate.state}
        <Pyr.PrimaryButton className="accept ml-auto" onClick={() => this.onAccept(candidate.state)}>Accept</Pyr.PrimaryButton>
        <Pyr.Button className="pass" onClick={this.onReject}>Pass</Pyr.Button>
      </div>
    );
  }

  renderItem(candidate, isSelected) {
    let clazzes = ClassNames(this.state.showMessages ? "" : "hide");
    let recruiter = candidate.recruiter;

    return (
      <Pyr.Grid.Row className="candidate-item">
        <Pyr.Grid.Col className="flx-col left">
          <Pyr.Scroll className="">
            <CandidateCVItem 
              candidate={candidate} 
              isSelected={isSelected} 
            />
 
            <RecruiterMessage 
              className={clazzes}
              job={this.state.job}
              candidate={candidate} 
              selected={isSelected} 
              onSetItem={this.props.onSetItem}
            />
          </Pyr.Scroll>
        </Pyr.Grid.Col>
        <Pyr.Grid.Col className="col-3 right">
          <RecruiterBlurb candidate={candidate} recruiter={recruiter}/>
        </Pyr.Grid.Col>
      </Pyr.Grid.Row>
    );
  }
}

